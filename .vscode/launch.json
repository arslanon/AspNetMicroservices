    "version": "0.2.0",
    "configurations": [
        {
            "name": "Catalog API Launch",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build-catalog_api",
            "program": "${workspaceFolder}/src/Services/Catalog/Catalog.API/bin/Debug/net5.0/Catalog.API.dll",
            "args": [],
            "cwd": "${workspaceFolder}/src/Services/Catalog/Catalog.API",
            "stopAtEntry": false,
            "serverReadyAction": {
                "action": "openExternally",
                "pattern": "\\bNow listening on:\\s+(https?://\\S+)",
                "uriFormat": "%s/swagger"
            }
        },
        {
            "name": "Basket API Launch",
